<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pokhyl.lifeboat.SettingsOldActivity">

    <TextView
        android:text="@string/player_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        tools:text="@string/player_number"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/spinner_player_number"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginLeft="16dp" />

    <Switch
        android:text="@string/switch_random_roles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/role_switcher"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_player_number"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        android:textOn="123"
        android:textOff="456"
        android:switchTextAppearance="@style/TextAppearance.AppCompat" />
</android.support.constraint.ConstraintLayout>
